{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
      "name": "jenkins",
      "creationTimestamp": null
  },
  "parameters":[
      {
          "name": "NAME",
          "displayName": "Name",
          "description": "A name used for all objects",
          "required": true,
          "value": "jenkins"
      },{
        "name": "GH_USERNAME",
        "required": true
      },{
        "name": "GH_PASSWORD",
        "description": "GitHub Personal Access Token",
        "required": true
      },{
        "name": "BITBUCKET_USERNAME",
        "required": true
      },{
        "name": "BITBUCKET_PASSWORD",
        "description": "Bitbucket Personal Access Token",
        "required": true
      },{
        "name": "BITBUCKET_URL",
        "description": "Bitbucket Url",
        "required": true
      },{
        "name": "JIRA_USERNAME",
        "required": true
      },{
        "name": "JIRA_PASSWORD",
        "description": "Jira Personal Access Token",
        "required": true
      },{
        "name": "JIRA_URL",
        "description": "Jira url",
        "required": true
      },{
        "name": "SLAVE_USER_PASSWORD",
        "displayName": "SLAVE_USER_PASSWORD",
        "description": "SLAVE_USER_PASSWORD",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{16}"
    }
  ],
  "objects": [
    {
        "apiVersion": "v1",
        "kind": "Secret",
        "metadata": {
            "annotations": null,
            "name": "template.${NAME}-slave-user"
        },
        "stringData": {
            "username": "jenkins-slave",
            "password": "${SLAVE_USER_PASSWORD}"
        }
    },{
        "apiVersion": "v1",
        "kind": "Secret",
        "metadata": {
            "annotations": null,
            "name": "bitbucket-account"
        },
        "stringData": {
            "metadata.name": "bitbucket-account",
            "username": "${BITBUCKET_USERNAME}",
            "password": "${BITBUCKET_PASSWORD}",
            "url": "${BITBUCKET_URL}"
        }
    },{
      "apiVersion": "v1",
      "kind": "Secret",
      "metadata": {
          "annotations": null,
          "name": "jira-account"
      },
      "stringData": {
          "metadata.name": "jira-account",
          "username": "${JIRA_USERNAME}",
          "password": "${JIRA_PASSWORD}",
          "url": "${JIRA_URL}"
      }
  },{
        "apiVersion": "v1",
        "kind": "Secret",
        "metadata": {
            "annotations": null,
            "name": "template.${NAME}-github"
        },
        "stringData": {
            "metadata.name": "template.${NAME}-github",
            "username": "${GH_USERNAME}",
            "password": "${GH_PASSWORD}"
        }
    }
  ]
}
